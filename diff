  <script>
    const fortunes = [
      "Noget godt finder dig i stilhed.",
      "En lille beslutning ændrer retning.",
      "Tålmodighed vil belønnes.",
      "Du er mere klar, end du tror.",
      "Et møde bliver vigtigt."
    ];

    const random = fortunes[Math.floor(Math.random() * fortunes.length)];
    document.getElementById("fortune").textContent = random;
  </script>

